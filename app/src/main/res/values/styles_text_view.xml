<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TextView" />

    <style name="AppTheme.TextView.Primary" parent="AppTheme.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/textDefault</item>
    </style>

    <style name="AppTheme.TextView.Secondary" parent="AppTheme.TextView">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/textDefault</item>
    </style>

    <style name="AppTheme.TextView.MenuTitle" parent="AppTheme.TextView.Primary">
        <item name="android:textSize">@dimen/textLarge_X</item>
        <item name="android:fontFamily">@font/montserrat_bold_xml</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.TextView.MenuDescription" parent="AppTheme.TextView.Secondary">
        <item name="android:fontFamily">@font/josefin_sans_regular</item>
    </style>
</resources>